      // Portfolio-Grid
      section(class="bg-light" id="portfolio")
        div(class="container")
          div(class="contact1")
            div(class="container-contact1")
              div(class="contact1-pic js-tilt" data-tilt)
                img(src="/img/vec_church.jpg" alt="IMG")
                
              form(method="post" action="" class="contact1-form validate-form")
                span(class="contact1-form-title")="You may add a church by filling out the form"
              
                div(class="wrap-input1 validate-input" data-validate="Church name is required")
                  input(class="input1" type="text" placeholder="Church Name" name="church[name]" required)
                  span(class="shadow-input1 z-index-low")
                
                div(class="wrap-input1 validate-input" data-validate="Church state is required")
                  input(class="input1" type="text" placeholder="State" name="church[state]" required)
                  span(class="shadow-input1 z-index-low")
                
                div(class="wrap-input1 validate-input" data-validate="Church city is required")
                  input(class="input1" type="text" placeholder="City" name="church[city]" required)
                  span(class="shadow-input1 z-index-low")
                
                div(class="wrap-input1 validate-input" data-validate="Church zip is required")
                  input(class="input1" type="text" placeholder="Zip" name="church[zip]" required)
                  span(class="shadow-input1 z-index-low")
                
                div(class="wrap-input1 validate-input" data-validate="GPS longitude is required")
                  input(class="input1" type="text" placeholder="GPS Longitude ex. -34.53212" name="church[long]" required)
                  span(class="shadow-input1 z-index-low")
                
                div(class="wrap-input1 validate-input" data-validate="GPS latitude is required ex. 86.02342")
                  input(class="input1" type="text" placeholder="GPS Latitude" name="church[lat]" required)
                  span(class="shadow-input1 z-index-low")
                
                div(class="wrap-input1")
                  input(class="input1" type="text" placeholder="Video link optional" name="church[video_link]")
                  span(class="shadow-input1 z-index-low")
                
                div(class="wrap-input1 validate-input" data-validate="Church image is required ex. https://www.google.com/some_image_link")
                  input(class="input1" type="text" placeholder="Image path" name="church[image_path]" required)
                  sspan(class="shadow-input1 z-index-low")
                
                div(class="container-contact1-form-btn")
                  button(class="contact1-form-btn")
                    span="Add church"
                    input(type="submit" value="" class="submit-btn-special")
                    i(class="fa fa-long-arrow-right" aria-hidden="true")
                  
                  
